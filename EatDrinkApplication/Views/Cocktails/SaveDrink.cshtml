@model EatDrinkApplication.ViewModel.CocktailViewModel

@{
    ViewData["Title"] = "SaveDrink";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <h1>Save Drink</h1>
    <div>
        <h4>@Html.DisplayFor(model => model.CocktailDescription.drinks[0].strDrink)</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="SaveDrink">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>


