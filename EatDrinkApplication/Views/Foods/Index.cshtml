@model EatDrinkApplication.ViewModel.FoodViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CocktailLayout.cshtml";
}

<h1>Foods</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <select asp-for="SelectedIngredient" class="form-control" asp-items="@Model.Ingredients"></select>
            </div>
            <span asp-validation-for="SelectedIngredient" class="text-danger"></span>
            <div class="form-group">
                <select asp-for="SelectedCuisine" class="form-control" asp-items="@Model.Cuisines"></select>
            </div>
            <span asp-validation-for="SelectedCuisine" class="text-danger"></span>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Meals</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Result result in Model.Meals.results)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => result.title)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@result.id">Details</a>
            </td>
        </tr>
        }
    </tbody>
</table>
