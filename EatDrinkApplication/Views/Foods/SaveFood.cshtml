@model EatDrinkApplication.ViewModel.FoodViewModel
@{
    ViewData["Title"] = "SavedFod";
    Layout = "~/Views/Shared/_CocktailLayout.cshtml";
}

<h1>Save Food</h1>
<div>
    <h4>@Html.DisplayFor(model => model.RecipeInfo.title)</h4>
    <hr />
    <form asp-action="SaveFood">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class=" row">
            <div class="col-md-6">
                <input type="hidden" asp-for="@Model.RecipeInfo.id" />
                <input type="hidden" asp-for="@Model.RecipeInfo.title" />
                @for (int i = 0; i < Model.RecipeInfo.extendedIngredients.Length; i++)
                {
                    <input type="hidden" asp-for="@Model.RecipeInfo.extendedIngredients[i].name" />
                }
                <input type="hidden" asp-for="@Model.RecipeInfo.instructions" />
            </div>
            <span asp-validation-for="@Model.RecipeInfo" class="text-danger"></span>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>

