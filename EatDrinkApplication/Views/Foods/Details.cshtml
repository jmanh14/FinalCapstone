@model EatDrinkApplication.Models.RecipeInfo

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_HomeCookLayout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>@Html.DisplayFor(model => model.title)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Instructions
        </dt>
        <br />
        <dd class="col-sm-10">
            @Html.DisplayFor(model=>model.instructions)
        </dd>
        <dt class="col-sm-2">
            Ingredients
        </dt>
        <br />
        @for(int i = 0; i < Model.extendedIngredients.Length; i++)
        {
            <dd class="col-sm-10">
                @Html.DisplayFor(model=>model.extendedIngredients[i].originalString)
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
